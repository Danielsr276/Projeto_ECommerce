<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.uniftec.projetoecommerce">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/unnamed"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/unnamed"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.UserActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.EnderecoActivity" />
        <activity
            android:name=".ui.ListProdutosActivity"
            android:label="@string/title_activity_list_produtos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.DetalheProdutoActivity" />
        <activity android:name=".ui.CarrinhoComprasActivity" />
        <activity android:name=".ui.FinalizarCompraActivity"></activity>
    </application>

</manifest>