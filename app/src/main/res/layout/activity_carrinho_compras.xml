<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.uniftec.projetoecommerce.ui.CarrinhoComprasActivity">

    <TextView
        android:id="@+id/txt_titulo_compras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Itens do carrinho"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewlistaCarrinhoCompras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_finalizar_compras"
        android:layout_below="@id/txt_titulo_compras"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/btn_finalizar_compras"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="Finalizar compras"
        android:textStyle="bold" />

</RelativeLayout>
